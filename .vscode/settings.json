{
  // General
  "files.associations": {
    "*.ps1.tmpl": "powershell",
    "*.toml.tmpl": "toml",
    "*.yaml.tmpl": "yaml",
    "*.yml.tmpl": "yaml"
  },

  // Themes
  "material-icon-theme.files.associations": {
    "*.tmpl": "../../icons/go-template",
    "*.ps1.tmpl": "powershell",
    "*.sh.tmpl": "console",
    "*.toml.tmpl": "settings",
    "*.yaml.tmpl": "yaml",
    "*.yml.tmpl": "yaml",
    ".chezmoiroot": "../../icons/chezmoi",
    ".chezmoiversion": "../../icons/chezmoi",
    "config.tmpl": "git",
    "dot_Brewfile.tmpl": "ruby",
    "ignore.tmpl": "git"
  },

  // Go
  "go-template.patterns": ["**/*.tmpl"],
  "[go-template]": {
    "editor.defaultFormatter": "golang.go",
    "editor.rulers": [120]
  },

  // JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.rulers": [120]
  },

  // Lua
  "Lua.diagnostics.globals": ["vim"],
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua",
    "editor.rulers": [120]
  },

  // Shell
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.rulers": [120]
  },

  // YAML
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.rulers": [120]
  },

  // Code Spell Checker
  "cSpell.words": ["alacritty", "chezmoi", "codespaces", "commandline", "devcontainer", "devcontainers", "keymaps"],

  // Prettier
  "prettier.bracketSpacing": true,
  "prettier.printWidth": 120,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "es5",
  "prettier.useTabs": false
}
