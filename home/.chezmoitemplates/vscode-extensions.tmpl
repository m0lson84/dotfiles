{{- $extensions = concat $extensions ( list
  "hashicorp.terraform"
  ) -}}
{{- end -}}

{{- if ne .env.os "darwin" -}}
{{- $extensions = concat $extensions ( list
  "james-yu.latex-workshop"
  "ms-vscode.powershell"
  ) -}}
{{- end -}}


#######################################
# Install common VSCode extensions
# Globals:
#   None
# Arguments:
#   None
#######################################
function install_extensions() {
  echo "Installing VSCode extensions..."
  {{ range $extensions -}}
  code --force --install-extension {{ . }}
  {{ end -}}
}
