# General
title = Terminal
confirm-close-surface = false
resize-overlay = never
copy-on-select = true

# Shell
shell-integration = zsh
shell-integration-features = no-cursor

# Theme
theme = tokyo-night
window-theme = ghostty

# Font
font-family = {{ $font.family }}
font-style = Medium
font-size = {{ $font.size }}
font-thicken = true
bold-is-bright = true

# Cursor
cursor-style = block
cursor-style-blink = false

# Window
window-height = 40
window-width = 120
window-padding-balance = true
window-padding-color = extend
window-padding-x = 4
window-padding-y = 4

{{- /* Linux specific */ -}}
{{- if eq .env.os "linux" }}

# Linux
window-decoration = false
gtk-tabs-location = hidden

{{- end }}

{{- /* MacOS specific */ -}}
{{- if eq .env.os "darwin" }}

# MacOS
window-colorspace = display-p3
macos-titlebar-style = hidden

{{- end }}

# Imports
config-file = ./keymaps

