import: 
  - ~/.config/alacritty/mappings/keyboard.yaml
  - ~/.config/alacritty/mappings/mouse.yaml
  - ~/.config/alacritty/themes/terminal.yaml
{{ if eq .env.os "windows" -}} shell: { program: ubuntu } {{- end }}
working_directory: ~
live_config_reload: true
ipc_socket: true

env:
  TERM: alacritty

window:
  dimensions: { columns: 120, lines: 40 }
  padding: { x: 4, y: 4 }
  dynamic_padding: false
  decorations: full
  opacity: 1.0
  startup_mode: Windowed
  title: Terminal
  dynamic_title: false
  resize_increments: true
  option_as_alt: OnlyLeft

scrolling:
  history: 10000
  multiplier: 3

font:
  normal: { family: JetBrainsMono Nerd Font, style: Regular }
  bold: { family: JetBrainsMono Nerd Font, style: Bold }
  italic: { family: JetBrainsMono Nerd Font, style: Italic }
  bold_italic: { family: JetBrainsMono Nerd Font, style: Bold Italic }
  size: {{ if eq .env.os "darwin" -}} 13.0 {{- else -}} 10.0 {{- end }}
  offset: { x: 0, y: 0 }
  glyph_offset: { x: 0, y: 0 }

bell:
  animation: EaseOutExpo
  duration: 0
  color: "#ffffff"

selection:
  semantic_escape_chars: ",│`|:\"' ()[]{}<>\t"
  save_to_clipboard: false

cursor:
  style:
    shape: Block
    blinking: Off
  unfocused_hollow: true
  thickness: 0.15

mouse:
  double_click: { threshold: 300 }
  triple_click: { threshold: 300 }
  hide_when_typing: false

hints:
  alphabet: "jfkdls;ahgurieowpq"
  enabled:
    - regex: "(ipfs:|ipns:|magnet:|mailto:|gemini:|gopher:|https:|http:|news:|file:|git:|ssh:|ftp:)[^\u0000-\u001F\u007F-\u009F<>\"\\s{-}\\^⟨⟩`]+"
      hyperlinks: true
      command: open
      post_processing: true
      mouse: { enabled: true, mods: None }
      binding: { key: U, mods: Control|Shift }

debug:
  render_timer: false
  persistent_logging: false
  log_level: Warn
  renderer: None
