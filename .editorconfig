# EditorConfig is awesome: https://EditorConfig.org

root = true

# General
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

# Lua
[*.lua]
indent_style = space
indent_size = 2

# Shell
[*.{bash,sh,zsh}]
indent_size = 2
max_line_length = 100

[*.fish]
indent_size = 4
max_line_length = 100

# Configuration
[*.{json,toml,y{a,}ml}]
indent_style = space
indent_size = 2

# Documentation
[*.{md,Rmd,rst}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
